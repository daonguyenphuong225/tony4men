<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="/css/user.css">

   
</head>

<body>

    <div id="container">
        <div id="header">
            <%- include('header') %>
        </div>

        <div id="body m-0">

            <div class="swiper-container mySwiper ">
                <div class="swiper-wrapper">
                  <div class="swiper-slide"><img src="/images/bia1.png" alt=""></div>
                  <div class="swiper-slide"><img src="/images/bia2.png" alt=""></div>
                  <div class="swiper-slide"><img src="/images/bia3.png" alt=""></div>
                  <div class="swiper-slide"><img src="/images/bia4.png" alt=""></div>
                </div>
                <div class="swiper-pagination"></div>
              </div>
              <%for (const categoryParent of categoryParents) { %>

              
              <div style="overflow: hidden;" >
                <div class="d-flex align-items-center m-5 mb-2">
                <h3><a href="/products/<%=categoryParent._id%>"><%=categoryParent.name%></a></h3>
                <%for (const category of categories) { %>
                <%if ( category.parentId == categoryParent._id) { %>
                <div class="product m-3">
                  <input type="hidden" value="<%=category._id%>">
                  <span style="font-weight: 500;text-transform: uppercase;"><a class="category-click"><%=category.name%></a></span>
                  <div class="underline"></div>
                </div>
                <%}}%>

              </div>

              <div class="content mx-4">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-5 px-2">
              
                  <% let i = 0 %>
                  <%for (const product of products) { %>
                 
                    <%if(JSON.stringify(product.categoryId.parentId) == JSON.stringify(categoryParent._id) && i < 8 ){%>
                      <%i++%>
                     
                  <div class="product-card col">
                    <div class="card h-100">
                     <div class="picture-parent">
                          <a href="/productDetail/<%=product._id%>">
                        <img  src="<%=product.productDetailIds[0].pictures[0]%>" class="products-picture card-img-top" >
                        <%if(product.productDetailIds[1]){%>
                        <img   src="<%=product.productDetailIds[1].pictures[0]%>" class="products-picture-hover card-img-top" >
                      <%}else{%>
                        <img   src="<%=product.productDetailIds[0].pictures[1]%>" class="products-picture-hover card-img-top" >
                        <%}%>
                      </a>
                     </div>
                      <div class="d-flex flex-column justify-content-center align-items-center">
                        <h5 class="products-name card-title"><%=product.name%></h5>
                        <p class="products-id d-none card-text" ></p>
                        <p class="products-price card-text"><%=numeral(product.price).format('0,0')%>đ</p>
                       
                      </div>
                      <div class=" product-footer">
                        <form action="/productDetail/<%=product._id%>" method="GET">
                          <button class="detail-btn btn btn-dark" ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eyeglasses" viewBox="0 0 16 16">
                            <path d="M4 6a2 2 0 1 1 0 4 2 2 0 0 1 0-4zm2.625.547a3 3 0 0 0-5.584.953H.5a.5.5 0 0 0 0 1h.541A3 3 0 0 0 7 8a1 1 0 0 1 2 0 3 3 0 0 0 5.959.5h.541a.5.5 0 0 0 0-1h-.541a3 3 0 0 0-5.584-.953A1.993 1.993 0 0 0 8 6c-.532 0-1.016.208-1.375.547zM14 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0z"/>
                          </svg>  Chi tiết</button>
                        </form>
                        </div>
                    </div>
                  </div>
                  <%}}%>
                </div>
              </div>
              <%}%>

              
        </div>
        <div id="footer">
            <%- include('footer') %>
        </div>
     </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="/js/user.js "></script>


</html>